@import "compass/utilities/sprites/base"

// Global size list
$sizes: 16 28 32 56 64
@each $size in $sizes
  .size-#{$size}
    height: #{$size}px
    width: #{$size}px

// Currencies
$currency_icons: sprite-map("currencies/small/*.png")

.currencies
  display: inline-block
  vertical-align: middle
  position: relative
  top: -1px

  &.currencies-gold.size-small
    background: sprite($currency_icons, "gold") no-repeat

  &.size-small
    height: 30px
    width: 36px

// Rarities
$rarity_icons: sprite-map("rarities/tiny/*.png")

$rarities: 0 1 2 3 4

.rarities
  display: inline-block
  vertical-align: top

  @each $rarity in $rarities
    &.rarity-#{$rarity}.size-20
      background: sprite($rarity_icons, "icon-#{$rarity}") no-repeat


  &.size-20
    width: 20px
    height: 19px

  &.rarity-token
    opacity: 0.70
    filter: alpha(opacity=70)

// Cards
.cards
  display: inline-block
  vertical-align: middle
  max-width: none

  &.size-tiny
    width: 40px
    height: 30px
  &.size-small
    width: 73px
    height: 55px
  &.size-medium
    width: 153px
    height: 115px
  &.size-large
    height: 225px
    width: 300px



// LOGIN
$provider_icons: sprite-map("providers/*.png")

.google, .facebook
  display: inline-block
  vertical-align: middle

  &.bottom
    vertical-align: bottom

  &.size-16
    height: 16px
    width: 16px

  &.size-19
    height: 19px
    width: 19px

  &.size-24
    height: 24px
    width: 24px

  &.size-48
    height: 48px
    width: 48px


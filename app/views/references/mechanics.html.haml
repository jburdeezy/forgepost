= render_block("base") do
  .row
    .span10
      - ["deck_cards", "sickness"].each do |key|
        %h3.header= t(".#{key}.title")

        .well.well.well-small.well-trimmed
          - 10.times do |i|
            - msg = t(".#{key}.desc_#{i}", :default => "")
            - next if msg.blank?
            %p
              - @references.each {|k, v| msg = msg.gsub("{#{k}}", v)}
              != msg
